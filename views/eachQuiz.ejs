              // ปล่อยแบบทดสอบทันที (ปรับเวลาเป็น UTC+7)
              let releaseWhen = new Date(); // เวลาปัจจุบัน (UTC)
              releaseWhen = new Date(releaseWhen.getTime() + (7 * 60 * 60 * 1000)); // เพิ่ม 7 ชั่วโมงเพื่อเป็นเวลาไทย (UTC+7)
              submitReleaseQuiz(quizId, releaseWhen.toISOString(), null); // ส่งในรูปแบบ ISO และไม่มี deadline
            }
          });
        }

        function confirmDelete(quizId) {
          Swal.fire({
            title: "แน่ใจแล้วหรือยัง?",
            text: "คุณไม่สามารถเรียกคืนแบบทดสอบนี้ได้!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "gray",
            confirmButtonText: "ลบแบบทดสอบ",
            cancelButtonText: "ยกเลิก",
            customClass: {
              container: 'swal-container',

              icon: 'swal-icon',
              confirmButton: 'swal-confirm-button',
              cancelButton: 'swal-cancel-button'
            }
          }).then((result) => {
            if (result.isConfirmed) {
              window.location.href = `/adminIndex/deleteQuiz?quizId=${quizId}`;
            }
          });
        }

        function openReleaseQuizModal(quizId) {
          Swal.fire({
            title: '<div class="my-4">ปล่อยแบบทดสอบ</div>',
            html: `
      <div><label for="releaseDate" class="form-label me-2">วันเวลาที่จะปล่อย:</label></div>
      <div class="d-flex justify-content-center mb-3">
          <div class="m-3">
              <input type="date" style="width: 125px;" id="releaseDate" class="form-control" required>
          </div>
          <div class="m-3">
              <input type="time" style="width: 125px;" id="releaseTime" class="form-control" required>
          </div>
      </div>

      <div><label for="deadlineDate" class="form-label me-2">วันเวลาหมดเขต (ทางเลือก):</label></div>
      <div class="d-flex justify-content-center ">
          <div class="d-flex align-items-center m-3">
              <input type="date" style="width: 125px;" id="deadlineDate" class="form-control">
          </div>
          <div class="d-flex align-items-center m-3">
              <input type="time" style="width: 125px;" id="deadlineTime" class="form-control">
          </div>
      </div>
    `,
            showCancelButton: true,
            confirmButtonText: 'ปล่อยแบบทดสอบ',
            cancelButtonText: 'ยกเลิก',
            customClass: {
              container: 'swal-container',
              icon: 'swal-icon',
              confirmButton: 'swal-launch-button',
              cancelButton: 'swal-cancel-button'
            },

            didOpen: () => {
              const releaseDateInput = document.getElementById('releaseDate');
              const releaseTimeInput = document.getElementById('releaseTime');
              const deadlineDateInput = document.getElementById('deadlineDate');
              const deadlineTimeInput = document.getElementById('deadlineTime');

              // ตั้งค่า min สำหรับวันที่เป็นวันถัดไปจากวันที่ปัจจุบัน
              const today = new Date();
              const tomorrow = new Date(today);
              tomorrow.setDate(today.getDate() + 1);
              const tomorrowString = tomorrow.toISOString().split('T')[0];

              releaseDateInput.setAttribute('min', tomorrowString);
              deadlineDateInput.setAttribute('min', tomorrowString); // ใช้ค่าเดียวกันสำหรับ deadline
            },

            preConfirm: () => {
              const releaseDate = document.getElementById('releaseDate').value;
              const releaseTime = document.getElementById('releaseTime').value;
              const deadlineDate = document.getElementById('deadlineDate').value;
              const deadlineTime = document.getElementById('deadlineTime').value;

              // ตรวจสอบว่า releaseDate และ releaseTime ต้องไม่ว่าง
              if (!releaseDate || !releaseTime) {
                Swal.showValidationMessage('กรุณากรอกวันและเวลาสำหรับการปล่อยแบบทดสอบ');
                return false;
              }

              let releaseWhen = new Date(`${releaseDate}T${releaseTime}:00`);
              releaseWhen = new Date(releaseWhen.getTime() + (7 * 60 * 60 * 1000)); // แปลงเวลาให้เป็นเวลาไทย (UTC+7)

              try {
                if (isNaN(releaseWhen.getTime())) {
                  throw new Error('Invalid release date/time');
                }

                let deadline = null; // กำหนดให้เป็น null ก่อน
                if (deadlineDate && deadlineTime) {
                  deadline = new Date(`${deadlineDate}T${deadlineTime}:00`);
                  deadline = new Date(deadline.getTime() + (7 * 60 * 60 * 1000));

                  // ตรวจสอบว่า deadline หลังจาก releaseWhen หรือไม่
                  if (deadline <= releaseWhen) {
                    throw new Error('วันเวลาหมดเขตต้องอยู่หลังวันเวลาปล่อยแบบทดสอบ');
                  }

                  deadline = deadline.toISOString();
                }

                return {
                  releaseWhen: releaseWhen.toISOString(),
                  deadline
                };
              } catch (error) {
                Swal.showValidationMessage(error.message);
                return false;
              }
            }
          }).then((result) => {
            if (result.isConfirmed) {
              console.log('Submitted Release:', result.value.releaseWhen);
              console.log('Submitted Deadline:', result.value.deadline);
              submitScheduleQuizRelease(quizId, result.value.releaseWhen, result.value.deadline);
            }
          });
        }

        function submitReleaseQuiz(quizId, releaseWhen, deadline) {
          console.log('quizId:', quizId); // ตรวจสอบว่า quizId ถูกส่งมาเป็นสตริงหรือไม่

          const isReleased = true; // ปล่อยแบบทดสอบ

          fetch(`/adminIndex/releaseQuiz/${quizId}`, {  // ใช้ path parameters แทน query parameters
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              isReleased,
              releaseWhen,
              deadline
            })
          })
            .then(response => response.json())
            .then(data => {
              if (data.success) {
                Swal.fire({
                  icon: "success",
                  title: "ปล่อยแบบทดสอบสำเร็จ",
                  showConfirmButton: false,
                  timer: 1500,

                  customClass: {
                    container: 'swal-container',
                    icon: 'swal-icon',
                  },
                }).then(() => {
                  location.reload(); // รีเฟรชหน้าจอหลังจากปิด Swal
                });
              } else {
                alert('เกิดข้อผิดพลาดในการปล่อยแบบทดสอบ');
              }
            })
            .catch(error => {
              // จัดการข้อผิดพลาดในกรณีที่ fetch ล้มเหลว
              console.error('Error:', error);
              Swal.fire({
                icon: "error",
                title: "เกิดข้อผิดพลาดในการเชื่อมต่อ",
                text: error.message || "ไม่สามารถเชื่อมต่อกับ server ได้",
                customClass: {
                  container: 'swal-container',

                  icon: 'swal-icon',
                  confirmButton: 'swal-confirm-button',
                  cancelButton: 'swal-cancel-button'
                },
              });
            });
        }

        function submitScheduleQuizRelease(quizId, releaseWhen, deadline) {
          console.log('quizId:', quizId); // ตรวจสอบ quizId
          console.log('releaseWhen:', releaseWhen); // ตรวจสอบเวลา release
          console.log('deadline:', deadline); // ตรวจสอบ deadline

          // ส่งค่าไปที่ Back-end
          fetch(`/adminIndex/scheduleQuizRelease/${quizId}`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              releaseWhen,  // เวลาในการปล่อย
              deadline      // กำหนดเส้นตาย
            })
          })
            .then(response => response.json())
            .then(data => {
              console.log('Response from server:', data); // ดูผลลัพธ์จาก Back-end
              if (data.success) {
                Swal.fire({
                  icon: "success",
                  title: "ตั้งเวลาปล่อยแบบทดสอบสำเร็จ",
                  showConfirmButton: false,
                  customClass: {
                    container: 'swal-container',

                    icon: 'swal-icon',
                    confirmButton: 'swal-confirm-button',
                    cancelButton: 'swal-cancel-button'
                  },
                  timer: 1500,
                }).then(() => {
                  location.reload();
                });
              } else {
                Swal.fire({
                  icon: "error",
                  title: "เกิดข้อผิดพลาด",
                  text: data.message || 'ไม่สามารถตั้งเวลาปล่อยแบบทดสอบได้',
                });
              }
            })
            .catch(error => {
              console.error('Error:', error); // แสดงข้อผิดพลาดใน Console
              Swal.fire({
                icon: "error",
                title: "เกิดข้อผิดพลาดในการเชื่อมต่อ",
                text: error.message || "ไม่สามารถเชื่อมต่อกับ server ได้",
              });
            });
        }


        function cancelReleaseQuiz(quizId) {
          Swal.fire({
            title: "แน่ใจแล้วหรือยัง?",
            text: "หากยกเลิกการปล่อยแล้วนักศึกษาทั้งหมดจะไม่เห็นแบบทสอบนี้!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "gray",
            confirmButtonText: "ยืนยัน",
            cancelButtonText: "ยกเลิก",
            customClass: {
              container: 'swal-container',
              icon: 'swal-icon',
              confirmButton: 'swal-confirm-button',
              cancelButton: 'swal-cancel-button'
            }
          }).then((result) => {
            if (result.isConfirmed) {
              // ถ้าผู้ใช้ยืนยันการยกเลิก
              fetch(`/adminIndex/releaseQuiz/${quizId}`, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                  isReleased: false,  // ตั้ง isReleased เป็น false เพื่อยกเลิกการปล่อย
                })
              })
                .then(response => response.json())
                .then(data => {
                  if (data.success) {
                    Swal.fire({
                      icon: "success",
                      title: "ยกเลิกการปล่อยสำเร็จ",
                      showConfirmButton: false,
                      timer: 1500,

                      customClass: {
                        container: 'swal-container',
                        icon: 'swal-icon'
                      },
                    }).then(() => {
                      location.reload(); // รีเฟรชหน้าเพื่ออัปเดตสถานะ
                    });
                  } else {
                    Swal.fire({
                      title: 'เกิดข้อผิดพลาด',
                      text: 'เกิดข้อผิดพลาดในการยกเลิกการปล่อย',
                      icon: 'error',
                      confirmButtonText: 'ตกลง'
                    });
                  }
                })
                .catch(error => console.error('Error:', error));
            }
          });
        }

        function updateQuestionCount() {
          const questionCountElement = document.getElementById('question-count');
          questionCountElement.innerHTML = `${quiz.questions.length} คำถาม`;
        }

        function calculateTotalPoints() {
          const totalPoints = quiz.questions.reduce((sum, question) => sum + question.points, 0);
          document.getElementById('all-points-count').innerText = `( ${totalPoints} คะแนน)`;
        }

        function updateQuestionPoints(index, newPoints) {
          // ปรับคะแนนในอาร์เรย์ questions
          quiz.questions[index].points = Number(newPoints);
          // คำนวณคะแนนรวมใหม่
          calculateTotalPoints();
        }


      </script>


