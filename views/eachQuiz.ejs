      <script>


        function confirmRelease(quizId) {
          Swal.fire({
            title: 'ยืนยันการปล่อยแบบทดสอบ?',
            text: "คุณแน่ใจหรือไม่ว่าต้องการปล่อยแบบทดสอบนี้ทันที!",
            icon: 'warning',
